view,
input,
text {
  font-size: 28rpx;
  color: #333;
}

.vdialog {
  width: 100vw;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 99;
}

.vdialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
  width: 100vw;
  height: 100%;
}

.vdialog-main {
  position: fixed;
  z-index: 101;
  width: 100vw;
}

.vdialog-container {
  position: relative;
  margin: 0 auto;
  background: #fff;
  z-index: 101;
  border-radius: 3px;
  box-sizing: border-box;
  box-shadow: 0 0 1px 1px rgba(0, 0, 0, 0.1), 0 2px 2px 0 rgba(0, 0, 0, 0.1);
  padding: 30rpx;
}

.vdialog-container.fullscreen {
  width: 100% !important;
  height: 100% !important;
}

.vdialog-title {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  font-size: 36rpx;
  color: #333;
}

.vdialog-container__body {
  padding-top: 10rpx;
}

.vdialog-container__footer {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-top: 10rpx;
}

.vdialog-container__footer > view {
  font-size: 28rpx;
  padding: 12rpx 20rpx;
}

.vdialog-container__footer .vdialog-container__footer__cancel {
  color: #999;
  margin-right: 15rpx;
}

.vdialog-container__footer .vdialog-container__footer__confirm {
  background: #09bb07;
  color: #fff;
  border-radius: 3px;
}

.vdialog-mask {
  background: rgba(0, 0, 0, 0.4);
}
